<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView"
            android:layout_width="280dp"
            android:layout_height="203dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shimmer_bg_color"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivArticleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage"
                    android:layout_alignTop="@id/ivArticleImage"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="100dp"
                    style="@style/ShimmerBackground"
                    android:padding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage"
                    android:layout_alignTop="@id/tvSource"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="10dp"
                    style="@style/ShimmerBackground"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage"
                    android:layout_alignTop="@id/tvTitle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    style="@style/ShimmerBackground"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPublishedAt"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/ivArticleImage"
                    android:layout_alignBottom="@id/ivArticleImage"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/ShimmerBackground"
                    android:textSize="12sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView2"
            android:layout_width="120dp"
            android:layout_height="203dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shimmer_bg_color"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivArticleImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tvSource2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage2"
                    android:layout_alignTop="@id/ivArticleImage2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="100dp"
                    style="@style/ShimmerBackground"
                    android:padding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage2"
                    android:layout_alignTop="@id/tvSource2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="10dp"
                    style="@style/ShimmerBackground"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTitle4"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivArticleImage2"
                    android:layout_alignTop="@id/tvTitle3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    style="@style/ShimmerBackground"
                    android:textSize="14sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>



