<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickNews" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/item_color_primary</item>

    </style>

    <style name="TransparentActiveIndicatorStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/qanelas_medium</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:backgroundTint">@color/item_color_primary</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/qanelas_medium</item>
    </style>


    <style name="Theme.QuickNews" parent="Base.Theme.QuickNews" >
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:fontFamily">@font/qanelas_medium</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="android:textAppearance">@style/PopupMenuTextAppearance</item>
    </style>

    <style name="PopupMenuTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/item_color_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextAppearanceNewsSearch">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SourceTextAppearanceNewsSearch">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/unchecked</item>
    </style>

    <style name="RowItemStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ProfileInfoTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/profile_text_color</item>
    </style>

    <style name="ProfileTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="BoldTextPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextEmailStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextNumberStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">phone</item>
    </style>

</resources>